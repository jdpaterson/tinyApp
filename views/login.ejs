<% include partials/_header %>
<% include partials/_intro-modal %>

<% if (locals.user) { %>
  <blockquote>You are already logged in!</blockquote>
  <% include partials/_homeButton %>
<% }else{ %>
 <% include partials/_error %>
  <input id="visited" type="hidden" value="<%=locals.session.views > 1%>" />
  <p class="flow-text" >Login with existing account here: </p>
  <form method="POST" action="/sessions">
    <input type="email" name="userEmail" placeholder="email" />
    <input type="password" name="password" placeholder="password" />
    <button class="btn waves-effect waves-light"
      type="submit"
      name="action">Login
    </button>
  </form>
<% } %>

<% include partials/_footer %>

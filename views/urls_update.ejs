<% include partials/_header %>
<% include partials/_error %>

<% if (locals.user === undefined){ %>
  <a href="/login" >You must login to view urls.</a>
<% }else{ %>
<h3> Select a URL: </h3>
<ul>
<% for (let key in user.userUrls){ %>
  <form action="/urls_update" method="POST" style="margin:15px;">
    <p><%=key%></p>
    <input type="hidden" name="shortURL" value="<%=key%>" />
    <input type="text" name="newURL" value="<%=user.userUrls[key].longUrl%>" style="width: 300px" >
    <input type="submit" value="Update">
  </form>
<% }} %>
